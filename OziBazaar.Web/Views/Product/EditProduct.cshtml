<div>
    @Html.Raw(HttpUtility.HtmlDecode(ViewBag.ProductInfo))
</div>
<input type="submit" value="Create Product" />
<input type="reset" value="Clear"/>
@Html.ActionLink("Back To List", "AdList", "Ad")
}
