@model IEnumerable<OziBazaar.Web.Models.WishListViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>ViewBag.Title</h2>

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            Group
        </th>
        <th>
            Product
        </th>
        <th>
            Price
        </th>
        <th>
            Start date
        </th>
        <th>
            End date
        </th>
        <th>
            Show details
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductGroupDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.ActionLink("View", "ViewProduct", "Product", new { id = item.ProductId }, null)
            </td>
        </tr>
    }

</table>
